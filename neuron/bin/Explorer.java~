import java.util.*;

public class Explorer {
	public static void explore(PlanetWars pw) {
		int aggro = pw.myForces/4;
		//find the forsaken
		List<Planet> forsaken = new ArrayList<Planet>();
		for (Planet p : pw.NotMyPlanets()) {
	    	double defense = p.numShips;
	   		if (defense < aggro)
	   		if (p.incoming.size() == 0) {
	   			forsaken.add(p);
	   		}
		}
		//possible additional filtering
		
		//filter and capture
		for (Planet p : forsaken) {
			Planet source = pw.MyClosestPlanets(p).get(0);
			int power = p.numShips+1;
			int distance = PlanetWars.Distance(source,p);
			if (p.owner >= 2) power += p.growthRate*distance;
			if (power < 12) pw.IssueOrder(source,p,power);
		}
	}
}
