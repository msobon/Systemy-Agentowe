import java.util.*;

public class Conqueror {
	public static void conquer(PlanetWars pw) {
		int aggro = 12; //maybe a function of smth??
		//find the weak
		List<Planet> weaklings = new ArrayList<Planet>();
		for (Planet p : pw.NotMyPlanets()) {
	    	double defense = p.NumShips();
	   		if (defense < aggro)
	   		if (p.incoming.size() == 0) {
	   			weaklings.add(p);
	   		}
		}
		//estimate their prowess
		
		//annihilate them
		for (Planet p : weaklings) {
			Planet source = pw.MyClosestPlanets(p).get(0);
			int power = p.NumShips()+1;
			if (p.Owner() >= 2) power += p.GrowthRate()*PlanetWars.Distance(source,p);
			pw.IssueOrder(source,p,power);
		}
	}
}
